<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/business_card"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_margin="28dp"
            android:background="@drawable/bg_item_service"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_business"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/business" />

            <TextView
                android:id="@+id/txt_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_business"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_titles"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/customer_card"
            android:layout_width="160dp"
            android:layout_height="200dp"
            android:layout_margin="28dp"
            android:background="@drawable/bg_item_service"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_customer"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/txt_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/lbl_customer"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_titles"/>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>