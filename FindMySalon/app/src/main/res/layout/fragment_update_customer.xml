<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorSecondary"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_update"
                    android:tint="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_update_profile"
                    android:textSize="@dimen/text_size_titles"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="textStart"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_item_service"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="70dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="@drawable/bg_img_circle"
                        >
                        <!--<ImageView
                            android:id="@+id/img_profile_photo"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:tint="@color/colorGrayDark"/>-->

                        <ImageView
                            android:id="@+id/img_profile_photo"
                            android:layout_width="85dp"
                            android:layout_height="85dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/photos_default"/>
                    </LinearLayout>

                    <!--<androidx.cardview.widget.CardView
                        android:id="@+id/btn_upload_photo"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_upload_photo"
                                android:textSize="@dimen/text_size"
                                android:layout_centerInParent="true"
                                android:textColor="@color/colorWhite"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>-->

                </LinearLayout>

                <EditText
                    android:id="@+id/etx_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lbl_first_name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etx_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lbl_last_name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etx_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lbl_email"
                    android:inputType="textEmailAddress" />

                <!--<fragment android:id="@+id/autocomplete_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                    />-->

                <!--<EditText
                    android:id="@+id/etx_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lbl_address"
                    android:inputType="textPersonName" />-->

                <AutoCompleteTextView
                    android:hint="@string/lbl_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etx_address" />

                <!--<ListView android:id="@+id/listView1" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/filterLayout"/>-->

                <!--<TextView
                    android:layout_marginTop="16dp"
                    android:id="@+id/search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                <EditText
                    android:id="@+id/etx_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/lbl_phone_number"
                    android:inputType="phone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_submit"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_submit"
                            android:textSize="@dimen/text_size"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorWhite"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>