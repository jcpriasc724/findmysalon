<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/bg_item_service"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_img_circle">

        <ImageView
            android:id="@+id/img_profile_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add_photo" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Staff"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/txt_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Phone Number"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="Category"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="@dimen/fab_btn_circle_small"
            android:layout_height="@dimen/fab_btn_circle_small"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_btn_circle_edit"
            android:src="@drawable/ic_edit"
            android:textAlignment="center"
            android:tint="@color/colorSecondary" />


    </LinearLayout>

</LinearLayout>