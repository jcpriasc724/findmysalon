<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context=".view.LoginActivity">


    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/fms_logo1" />

    <EditText
        android:id="@+id/etx_email"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorGrayMid"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="@string/lbl_email"
        android:inputType="textPersonName"
        android:textSize="@dimen/text_size" />

    <EditText
        android:id="@+id/etx_password"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@id/etx_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorGrayMid"
        android:drawableLeft="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="@string/lbl_password"
        android:inputType="textPassword"
        android:textSize="@dimen/text_size" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_signIn"
        android:layout_below="@id/etx_password"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/colorSecondary"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="@dimen/text_size"
                android:layout_centerInParent="true"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btn_signUp"
        android:layout_below="@id/btn_signIn"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/lbl_signUp"
        android:textColor="@color/colorSecondary"/>


</RelativeLayout>